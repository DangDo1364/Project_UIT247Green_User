<body class="res layout-subpage">
    <div id="wrapper" class="wrapper-full ">

        <!-- Main Container  -->
        <div class="main-container container">
            <ul class="breadcrumb">
                <li><a href="#"><i class="fa fa-home"></i></a></li>
                <li><a href="#">Thông tin tài khoản</a></li>
            </ul>

            <div class="row">
                <!--Middle Part Start-->
                <div class="col-sm-9" id="content">
                    <h2 class="title">Thông tin tài khoản</h2>
                    <p class="lead">Xin chào, <strong>Đăng Đô!</strong></p>
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <fieldset>
                                    <legend>Thay đổi mật khẩu</legend>
                                    <div class="form-group required">
                                        <label for="input-password" class="control-label">Mật khẩu hiện tại</label>
                                        <input type="password" class="form-control" id="input-password"
                                            placeholder="Mật khẩu hiện tại" value="" name="old-password">
                                    </div>
                                    <div class="form-group required">
                                        <label for="input-password" class="control-label">Mật khẩu mới</label>
                                        <input type="password" class="form-control" id="input-password"
                                            placeholder="Mật khẩu mới" value="" name="new-password">
                                    </div>
                                    <div class="form-group required">
                                        <label for="input-confirm" class="control-label">Xác nhận mật khẩu</label>
                                        <input type="password" class="form-control" id="input-confirm"
                                            placeholder="Xác nhận mật khẩu" value="" name="new-confirm">
                                    </div>
                                </fieldset>

                            </div>
                        </div>

                        <div class="buttons clearfix">
                            <div class="pull-right">
                                <input type="submit" class="btn btn-md btn-primary" value="Lưu thay đổi">
                            </div>
                        </div>
                    </form>
                </div>
                <!--Middle Part End-->
                <!--Right Part Start -->
                <aside class="col-sm-3 hidden-xs" id="column-right">
                    <h2 class="subtitle">Tài khoản</h2>
                    <div class="list-group">
                        <ul class="list-item">
                            <li><a href="my-account.html">Thông tin tài khoản</a>
                            </li>
                            <li><a href="password.html">Đổi mật khẩu</a>
                            </li>
                            <li><a href="wishlist.html">Danh sách yêu thích</a>
                            </li>
                            <li><a href="order-history.html">Lịch sử đặt hàng</a>
                            </li>
                        </ul>
                    </div>
                </aside>
                <!--Right Part End -->
            </div>
        </div>
        <!-- //Main Container -->
    </div>

