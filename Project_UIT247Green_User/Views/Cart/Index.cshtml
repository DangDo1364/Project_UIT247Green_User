<body>
	<!-- Slider  -->
	<section class="so-slideshow">
		<div id="so-slideshow">
			<div class="module  no-margin">
				<div class="yt-content-slider yt-content-slider--arrow1" data-autoplay="no" data-autoheight="no"
					data-delay="4" data-speed="0.6" data-margin="0" data-items_column0="1" data-items_column1="1"
					data-items_column2="1" data-items_column3="1" data-items_column4="1" data-arrows="yes"
					data-pagination="no" data-lazyload="yes" data-loop="no" data-hoverpause="yes">
					<div class="yt-content-slide">
						<a href="#"><img src="image/demo/slider/home7/background-header.png" alt="slider1"
								class="img-responsive"></a><br>
					</div>
				</div>
				<div class="loadeding"></div>
			</div>
		</div>

	</section>
	<!-- //end Slider  -->

	<!-- Main Container  -->
	<div class="main-container container">
		<ul class="breadcrumb">
			<li><a href="#"><i class="fa fa-home"></i></a></li>
			<li><a href="#">Giỏ hàng của bạn</a></li>
		</ul>

		<div class="row">
			<!--Middle Part Start-->
			<div id="content" class="col-sm-12">
				<h2 class="title">Giỏ hàng của bạn</h2>
				<div class="table-responsive form-group">
					<table class="table table-bordered">
						<thead>
							<tr>
								<td class="text-center">Sản phẩm</td>
								<td class="text-left">Tên</td>
								<td class="text-left">Số lượng</td>
								<td class="text-right">Giá</td>
								<td class="text-right">Giá tổng</td>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="text-center"><a href="product.html"><img width="70px"
											src="image/demo/shop/product/E3.jpg" alt="Aspire Ultrabook Laptop"
											title="Aspire Ultrabook Laptop" class="img-thumbnail" /></a></td>
								<td class="text-left"><a href="product.html">Sản phẩm 1</a><br />
								</td>
								<td class="text-left" width="200px">
									<div class="input-group btn-block quantity">
										<input type="text" name="quantity" value="1" size="1" class="form-control" />
										<span class="input-group-btn">
											<button type="submit" data-toggle="tooltip" title="Update"
												class="btn btn-primary"><i class="fa fa-clone"></i></button>
											<button type="button" data-toggle="tooltip" title="Remove"
												class="btn btn-danger" onClick=""><i
													class="fa fa-times-circle"></i></button>
										</span>
									</div>
								</td>
								<td class="text-right">100.000đ</td>
								<td class="text-right">100.000đ</td>
							</tr>
							<tr>
								<td class="text-center"><a href="product.html"><img width="70px"
											src="image/demo/shop/product/E1.jpg" alt="Xitefun Causal Wear Fancy Shoes"
											title="Xitefun Causal Wear Fancy Shoes" class="img-thumbnail" /></a></td>
								<td class="text-left"><a href="product.html">Sản phẩm 2</a></td>
								<td class="text-left" width="200px">
									<div class="input-group btn-block quantity">
										<input type="text" name="quantity" value="1" size="1" class="form-control" />
                                        <span class="input-group-btn">
                                            <button type="submit" data-toggle="tooltip" title="Update"
                                                    class="btn btn-primary">
                                                <i class="fa fa-clone"></i>
                                            </button>
                                            <button type="button" data-toggle="tooltip" title="Remove"
                                                    class="btn btn-danger" onClick="">
                                                <i class="fa fa-times-circle"></i>
                                            </button>
                                        </span>
									</div>
								</td>
								<td class="text-right">130.000đ</td>
								<td class="text-right">130.000đ</td>
							</tr>
						</tbody>
					</table>
				</div>
				<h3 class="subtitle no-margin">Nhập mã khuyến mãi và thông tin vận chuyển</h3>
				<p>Nhập mã khuyến mãi để mua hàng với giá ưu đãi.</p>
				<div class="panel-group" id="accordion">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title">
								<a href="#collapse-coupon" class="accordion-toggle" data-toggle="collapse"
									data-parent="#accordion" aria-expanded="true">Sử dụng mã khuyến mãi

									<i class="fa fa-caret-down"></i>
								</a>
							</h4>
						</div>
						<div id="collapse-coupon" class="panel-collapse collapse in" aria-expanded="true">
							<div class="panel-body">
								<label class="col-sm-2 control-label" for="input-coupon">Mã khuyến mãi</label>
								<div class="input-group">
									<input type="text" name="coupon" value=""
										placeholder="Nhập mã khuyến mãi của bạn ở đây..." id="input-coupon"
										class="form-control">
									<span class="input-group-btn"><input type="button" value="Áp dụng"
											id="button-coupon" data-loading-text="Loading..."
											class="btn btn-primary"></span>
								</div>
							</div>
						</div>
					</div>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title">
								<a href="#collapse-shipping" class="accordion-toggle collapsed" data-toggle="collapse"
									data-parent="#accordion" aria-expanded="false">Thông tin vận chuyển

									<i class="fa fa-caret-down"></i>
								</a>
							</h4>
						</div>
						<div id="collapse-shipping" class="panel-collapse collapse" aria-expanded="false"
							style="height: 0px;">
							<div class="panel-body">
								<p>Nhập địa chỉ của bạn để nhận báo giá vận chuyển</p>
								<div class="form-horizontal">
									<div class="form-group required">
										<label class="col-sm-2 control-label" for="input-country">Tỉnh</label>
										<div class="col-sm-10">
											<select name="country_id" id="input-country" class="form-control">
												<option value=""> --- Vui lòng chọn --- </option>
												<option value="244">TP. Hồ Chí Minh</option>
												<option value="1">Vĩnh Long</option>
												<option value="2">Bạc Liêu</option>
												<option value="3">Quãng Ngãi</option>
											</select>
										</div>
									</div>
									<div class="form-group required">
										<label class="col-sm-2 control-label" for="input-zone">Quận / Huyện</label>
										<div class="col-sm-10">
											<select name="zone_id" id="input-zone" class="form-control">
												<option value=""> --- Vui lòng chọn --- </option>
												<option value="3513">A</option>
												<option value="3514">B</option>
												<option value="3515">C</option>
												<option value="3516">D</option>
												<option value="3517">E</option>
												<option value="3518">F</option>
												<option value="3519">G</option>
											</select>
										</div>
									</div>
									<div class="form-group required">
										<label class="col-sm-2 control-label" for="input-postcode">Số nhà, tên đường,
											xã</label>
										<div class="col-sm-10"><input type="text" name="postcode" value=""
												placeholder="Địa chỉ cụ thể" id="input-postcode" class="form-control">
										</div>
									</div>
									<button type="button" id="button-quote" data-loading-text="Loading..."
										class="btn btn-primary">Xác nhận</button>
								</div>
							</div>
						</div>
					</div>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title">
								<a href="#collapse-voucher" data-toggle="collapse" data-parent="#accordion"
									class="accordion-toggle collapsed" aria-expanded="false">Sử dụng thẻ quà tặng

									<i class="fa fa-caret-down"></i>
								</a>
							</h4>
						</div>
						<div id="collapse-voucher" class="panel-collapse collapse" aria-expanded="false"
							style="height: 0px;">
							<div class="panel-body">
								<label class="col-sm-2 control-label" for="input-voucher">Mã quà tặng</label>
								<div class="input-group">
									<input type="text" name="voucher" value=""
										placeholder="Nhập mã quà tặng của bạn ở đây..." id="input-voucher"
										class="form-control">
									<span class="input-group-btn"><input type="submit" value="Áp dụng"
											id="button-voucher" data-loading-text="Loading..."
											class="btn btn-primary"></span>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4 col-sm-offset-8">
						<table class="table table-bordered">
							<tbody>
								<tr>
									<td class="text-right">
										<strong>Tổng sản phẩm:</strong>
									</td>
									<td class="text-right">230.000đ</td>
								</tr>
								<tr>
									<td class="text-right">
										<strong>Phí vận chuyển:</strong>
									</td>
									<td class="text-right">30.000đ</td>
								</tr>
								<tr>
									<td class="text-right">
										<strong>VAT (10%):</strong>
									</td>
									<td class="text-right">Đã bao gồm trong giá sản phẩm</td>
								</tr>
								<tr>
									<td class="text-right">
										<strong>Tổng thanh toán:</strong>
									</td>
									<td class="text-right">260.000đ</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>

				<div class="buttons">
					<div class="pull-left"><a asp-controller="home" asp-action="category" class="btn btn-primary">Tiếp tục mua sắm</a></div>
					<div class="pull-right"><a href="checkout.html" class="btn btn-primary">Thanh toán</a></div>
				</div>
			</div>
			<!--Middle Part End -->

		</div>
	</div>
	<!-- //Main Container -->
</body>